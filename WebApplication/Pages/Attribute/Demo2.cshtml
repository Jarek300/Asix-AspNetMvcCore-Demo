@page
@model WebApplication.Pages.Attribute.Demo2Model
@{
    ViewData["Title"] = "Attribute/Demo2";
}


<div class="jumbotron bg-light shadow-sm">
    <h1 class="display-4">Odczyt wszystkich atrybutów zmiennej A000</h1>

    @if (!string.IsNullOrEmpty(Model.mReadError))
    {
        <hr class="my-4">
        <div class="card text-white bg-danger mb-3">
            <div class="card-header"><h5>Błąd odczytu</h5></div>
            <div class="card-body">
                <p class="card-text">@Model.mReadError</p>
            </div>
        </div>
    }

    <hr class="my-4">

    <a id="btnRefresh" class="btn btn-secondary" asp-area="" asp-page="Variable/Demo1">Odśwież stronę</a>
    <script>document.getElementById("btnRefresh").focus();</script>
</div>


@if (string.IsNullOrEmpty(Model.mReadError))
{
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nazwa atrybutu</th>
            <th scope="col">Wartość atrybutu</th>
        </tr>
    </thead>
    <tbody>

        @for (int i = 0; i < Model.mAttributeNames.Count; ++i)
        {
            <tr>
                <th scope="row">@(i+1)</th>
                <td>@Model.mAttributeNames[i]</td>
                <td>@Model.mVariableAttributes[i]</td>
            </tr>
        }

    </tbody>
</table>}


